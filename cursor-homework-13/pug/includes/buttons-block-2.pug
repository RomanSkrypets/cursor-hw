    let btnImgDownloadBW = {
        "src": "../../img/download-white.svg",
        "alt": "download svg",
    }
-
    let btnImgDownloadG = {
        "src": "../../img/download-gray.svg",
        "alt": "download svg",
    }
-
    let btnImgDownloadW = {
        "src": "../../img/download-black.svg",
        "alt": "download svg",
    }
-
    let btnImgDownloadWB = {
        "src": "../../img/download-blue.svg",
        "alt": "download svg",
    }
-
    let btnImgSearchBW = {
        "src": "../../img/search-white.svg",
        "alt": "search svg",
    }
-
    let btnImgSearchW = {
        "src": "../../img/search-black.svg",
        "alt": "search svg",
