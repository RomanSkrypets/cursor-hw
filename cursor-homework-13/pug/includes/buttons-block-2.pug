.buttons-block-2
    h2.buttons-block-2__title Buttons Small
    .buttons-block-2__download-btns
        +btn('btn_color-bw', 'btn_size-small', 'Download')
        +btn('btn_color-g', 'btn_size-small', 'Download')
        +btn('btn_color-w', 'btn_size-small', 'Download')
        +btn('btn_color-wb', 'btn_size-small', 'Download')
        +btn-ri('btn_color-bw', 'btn_size-small', 'Download', 'btn__img_size-small', btnImgDownloadBW)
        +btn-ri('btn_color-g', 'btn_size-small', 'Download', 'btn__img_size-small', btnImgDownloadG)
        +btn-ri('btn_color-w', 'btn_size-small', 'Download', 'btn__img_size-small', btnImgDownloadW)
        +btn-ri('btn_color-wb', 'btn_size-small', 'Download', 'btn__img_size-small', btnImgDownloadWB)
        +btn-li('btn_color-rw', 'btn_size-small', 'btn__img_size-small', btnImgDownloadBW, 'Download')
        +btn-li('btn_color-g', 'btn_size-small', 'btn__img_size-small', btnImgDownloadG, 'Download')
        +btn-li('btn_color-w', 'btn_size-small', 'btn__img_size-small', btnImgDownloadW, 'Download')
        +btn-li('btn_color-wb', 'btn_size-small', 'btn__img_size-small', btnImgDownloadWB, 'Download')
    .buttons-block-2__different-btns
        +btn-tabs('btn_size-small', 'btn__section-1_color-bw', 'Tab 1', 'btn__section-3_color-w')
        +btn-mix('btn_size-small', 'btn__section-1_color-bw', 'btn__img_size-small', btnImgSearchBW, 'btn__section-2_color-w', 'btn__img_size-small', btnImgSearchW, 'btn__section-3_color-w', 'btn__img_size-small', btnImgSearchW)
        +btn-sizes('btn_size-small', 'btn__section-1_color-bw', 'S', 'btn__section-2_color-w', 'M', 'btn__section-3_color-w', 'L')
    .buttons-block-2__search-btns
        +btn-search('btn_color-rw', 'btn_size-small', 'btn__img_size-small', btnImgSearchBW)
        +btn-search('btn_color-gw', 'btn_size-big', 'btn__img_size-big', btnImgSearchBW)
    .buttons-block-2__tag-btns
        +btn-ri('btn_color-w', 'btn_size-small', 'Tag', 'btn__img_size-small', btnImgTagW)
        +btn('btn_color-gb', 'btn_size-small', 'Tag')
    .buttons-block-2__tag-btns        
        +btn-ri('btn_color-bw', 'btn_size-small', 'Tag', 'btn__img_size-small', btnImgTagBW)       
        +btn('btn_color-bw', 'btn_size-small', 'Tag')
    